{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ],
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}